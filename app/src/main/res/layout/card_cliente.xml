<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardCliente"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="16dp"
    tools:ignore="MissingConstraints"
    app:layout_constraintTop_toTopOf="parent"
    app:cardBackgroundColor="@color/colorAccent" >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/tituloNome"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Nome: "
               android:textSize="26sp"
               android:layout_marginLeft="10dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"
               />
           <TextView
               android:id="@+id/nome"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Fulano de tal "
               android:textSize="20sp"
               android:layout_weight="2"
               android:layout_marginLeft="20dp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/tituloNome"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"

               />
       </androidx.constraintlayout.widget.ConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

           <TextView
               android:id="@+id/tituloEmail"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Email: "
               android:textSize="26sp"
               android:layout_marginLeft="10dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"
               />
           <TextView
               android:id="@+id/email"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Fulano de tal "
               android:textSize="20sp"
               android:layout_weight="2"
               android:layout_marginLeft="20dp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/tituloEmail"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"

               />
       </androidx.constraintlayout.widget.ConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

           <TextView
               android:id="@+id/tituloCep"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="CEP: "
               android:textSize="26sp"
               android:layout_marginLeft="10dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"
               />
           <TextView
               android:id="@+id/cep"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Fulano de tal "
               android:textSize="20sp"
               android:layout_weight="2"
               android:layout_marginLeft="20dp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/tituloCep"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"

               />
       </androidx.constraintlayout.widget.ConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

           <TextView
               android:id="@+id/tituloRua"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Rua: "
               android:textSize="26sp"
               android:layout_marginLeft="10dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"
               />
           <TextView
               android:id="@+id/rua"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Fulano de tal "
               android:textSize="20sp"
               android:layout_weight="2"
               android:layout_marginLeft="20dp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/tituloRua"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"

               />
       </androidx.constraintlayout.widget.ConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

           <TextView
               android:id="@+id/tituloBairro"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Bairro: "
               android:textSize="26sp"
               android:layout_marginLeft="10dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"
               />
           <TextView
               android:id="@+id/bairro"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Fulano de tal "
               android:textSize="20sp"
               android:layout_weight="2"
               android:layout_marginLeft="20dp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/tituloBairro"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"

               />
       </androidx.constraintlayout.widget.ConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

           <TextView
               android:id="@+id/tituloCidade"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Cidade: "
               android:textSize="26sp"
               android:layout_marginLeft="10dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"
               />
           <TextView
               android:id="@+id/cidade"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Fulano de tal "
               android:textSize="20sp"
               android:layout_weight="2"
               android:layout_marginLeft="20dp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/tituloCidade"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"

               />
       </androidx.constraintlayout.widget.ConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

           <TextView
               android:id="@+id/tituloEstado"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Estado: "
               android:textSize="26sp"
               android:layout_marginLeft="10dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"
               />
           <TextView
               android:id="@+id/estado"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:text="Fulano de tal "
               android:textSize="20sp"
               android:layout_weight="2"
               android:layout_marginLeft="20dp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/tituloEstado"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"

               />
       </androidx.constraintlayout.widget.ConstraintLayout>

   </LinearLayout>



</androidx.cardview.widget.CardView>